<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1 class="page-header"><%= t :greeting, username: current_user.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <div id="dashboard text-center">
        <% if @contracts.empty? %>
          <p id="no_bands_msg" class="lead"> 
            <% t :band_list_empty %>
          </p>
          <p class="lead">
            <%= it :band_list_add_your_band, new_band_path: It.link(new_band_path, id: 'create_band_btn') %>
          </p>
        <% else %>
          <p class="lead">
            <%= it :band_list_text, new_band_path: It.link(new_band_path, id: 'create_band_btn') %>
          </p>
          <div id="band_list" class="row">
          <% @contracts.each do |contract| %>
            <% if contract.approved %>
              <%= link_to contract.band do %>
                <div class="col-sm-6 col-lg-2 band_button text-center">
                  <div class="band_logo center-block">
                    <%= render partial: 'band/logo', locals: { band: contract.band, size: '200' } %>
                  </div>
                  <h3><%= contract.band.name %></h3>
                  <p><%= t Contract.human_attribute_name("instrument." + contract.instrument) %></p>
                </div>
              <% end %>
            <% else %>
              <div class="col-sm-6 col-lg-2 band_button text-center pending_approval">
                <div class="band_logo">
                  <%= render partial: 'band/logo', locals: { band: contract.band, size: '200' } %>
                </div>
                <h3><%= contract.band.name %></h3>
                <p><%= t Contract.human_attribute_name("instrument." + contract.instrument) %></p>
              </div>
            <% end %>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% if not current_user.next_concerts.empty? %>
        <div class="panel panel-default">
          <div class="panel-heading text-center"><%= t :dashboard_upcoming_concerts %></div>
          <div class="panel-body">
            <% current_user.next_concerts.each do |concert| %>
              <%= link_to band_concert_path(concert.band, concert) do %>
                <strong><%= concert.date %></strong> - <%= concert.band.name %> - <%= concert.name %> - <%= concert.venue %>.<br/>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>